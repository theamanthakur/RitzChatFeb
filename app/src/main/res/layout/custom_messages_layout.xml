<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/proimg"
        android:layout_below="@+id/dateText"
        />

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateText"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:text="receiver messages here"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <ImageView
        android:id="@+id/message_reciever_like_view"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@id/receiver_message_text"
        android:layout_above="@+id/recieverTime"
        android:background="@drawable/ic_baseline_thumb_up_24"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recieverTime"
        android:textSize="14dp"
        android:text="ti:me"
        android:layout_below="@+id/receiver_message_text"
        android:layout_marginStart="40dp"

        android:layout_marginTop="1dp"
        />


    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/dateText"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/message_sender_file_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/dateText"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:background="@drawable/sender_messages_layout"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dateText"
        android:layout_marginTop="5dp"
        android:layout_marginStart="50dp"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/message_receiver_file_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/receiver_messages_layout"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date here"
        android:textColor="#0D0D0E"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/sender_messsage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dateText"
        android:layout_marginEnd="10dp"

        android:layout_alignParentTop="@+id/receiver_message_text"
        android:background="@drawable/sender_messages_layout"
        android:text="sender messages"
        android:textSize="14sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <ImageView
        android:id="@+id/message_sender_like_view"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toStartOf="@id/sender_messsage_text"
        android:layout_below="@+id/dateText"
        android:layout_marginTop="2dp"

        android:layout_above="@id/recieverTime"

        android:background="@drawable/ic_baseline_thumb_up_24"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/senderTime"
        android:textSize="14dp"
        android:text="ti:me"
        android:layout_below="@+id/sender_messsage_text"
        android:layout_marginStart="350dp"
        android:layout_marginTop="1dp"
        />

</RelativeLayout>